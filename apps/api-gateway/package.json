{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "",
  "author": "Dmytro Petrenko",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "lint": "eslint --no-error-on-unmatched-pattern –-ext .ts src",
    "lint:fix": "eslint --no-error-on-unmatched-pattern –-ext .ts src --fix",
    "dev": "node --inspect=0.0.0.0:5800 --require ts-node/register ./src/server.ts",
    "start": "node dist/src/server.js",
    "prod": "npm run build && npm run start",
    "tsc": "tsc"
  },
  "keywords": [
    "api",
    "gateway"
  ],
  "dependencies": {
    "@grpc/grpc-js": "1.7.1",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "lodash": "4.17.21",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "ts-proto": "1.126.1",
    "typedi": "0.10.0",
    "~iotcon-errors": "workspace:*",
    "~iotcon-models": "workspace:*",
    "~iotcon-proto": "workspace:*",
    "~iotcon-sdk": "workspace:*"
  },
  "devDependencies": {
    "@types/cookie-parser": "1.4.3",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.14",
    "@types/lodash": "4.14.191",
    "@types/node": "18.11.10",
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "prettier": "2.8.0",
    "ts-node": "10.9.1",
    "typescript": "4.9.3"
  }
